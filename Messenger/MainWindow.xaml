<Window x:Class="messenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мессенджер" Height="600" Width="850" WindowStartupLocation="CenterScreen"
        Background="#f0f0f5" FontFamily="Segoe UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Левая панель -->
        <Border Grid.Column="0" Background="White" Margin="10">
            <StackPanel Margin="10">
                <Border CornerRadius="8" Background="#d6e4ff" Padding="12" Margin="0,0,0,18" BorderBrush="#8ab3f0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding UserName}" FontWeight="Bold" FontSize="20" Foreground="#2067b2"/>
                        <TextBlock Text="{Binding UserStatus}" FontSize="13" Foreground="#555" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Чаты" FontSize="14" FontWeight="SemiBold" Foreground="#2067b2" Margin="0,0,0,8"/>
                <ListBox x:Name="UsersList" MinHeight="140" ItemsSource="{Binding Users}"
                         BorderThickness="0" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#333" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Status}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Separator Margin="0,15"/>
                <StackPanel>
                    <TextBlock Text="Локальный порт:" FontSize="13" Margin="0,5,0,0"/>
                    <TextBox x:Name="LocalPortTextBox" Text="9000" Margin="0,3,0,10"/>
                    <TextBlock Text="IP собеседника:" FontSize="13" Margin="0,5,0,0"/>
                    <TextBox x:Name="IpTextBox" Text="127.0.0.1" Margin="0,3,0,10"/>
                    <TextBlock Text="Порт собеседника:" FontSize="13" Margin="0,5,0,0"/>
                    <TextBox x:Name="PortTextBox" Text="9001" Margin="0,3,0,10"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Правая панель -->
        <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="8">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Сообщения -->
                <ListBox x:Name="MessagesList" Background="#fafafa" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="0,3" Background="#e0e7ff" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" FontSize="13" Text="{Binding Sender}" Foreground="#364f9d"/>
                                    <TextBlock Text="{Binding Text}" FontSize="13" Margin="0,2,0,0" TextWrapping="Wrap"/>
                                    <TextBlock FontSize="9" Foreground="Gray" HorizontalAlignment="Right"
                                               Text="{Binding Time, StringFormat='отправлено {0:HH:mm:ss}'}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!-- Ввод сообщения + кнопка прикрепления -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                    <TextBox x:Name="MessageTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="70" Width="400"
                             FontSize="14"
                             PreviewKeyDown="MessageTextBox_PreviewKeyDown"/>
                    <Button Width="45" Height="45" Margin="8,0,0,0" Click="AttachFileButton_Click"
                            Background="#f2f6ff" BorderThickness="0" ToolTip="Прикрепить файл">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="#2067b2">+</TextBlock>
                    </Button>
                    <Button Content="Отправить" Width="100" Margin="8,0,0,0"
                            FontWeight="Bold" Background="#2067b2" Foreground="White"
                            Click="SendButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>