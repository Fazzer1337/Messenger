<Window x:Class="messenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мессенджер" Height="450" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Список пользователей -->
        <ListBox x:Name="UsersList" Grid.Column="0" Margin="5" DisplayMemberPath="Name"/>
        <!-- Чат -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Список сообщений с шаблоном -->
            <ListBox x:Name="MessagesList" Margin="5" Grid.Row="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock FontWeight="Bold" Text="{Binding Sender}" />
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                            <TextBlock FontSize="10" Foreground="Gray"
                                       Text="{Binding Time, StringFormat='отправлено {0:HH:mm:ss}'}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!-- Панель ввода -->
            <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1">
                <TextBox x:Name="MessageTextBox" Width="400" Height="30" Margin="0,0,5,0"/>
                <Button Content="Отправить" Width="100" Click="SendButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
