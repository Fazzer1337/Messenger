<Window x:Class="messenger.UserNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Введите имя пользователя:" Margin="0,0,0,10"/>
        <TextBox Name="UserNameTextBox" MinWidth="150"/>
        <Button Content="OK" Margin="0,10,0,0" Click="OkButton_Click"/>
    </StackPanel>
</Window>
